{
    "name": "apollo-server-subscription-task-runner",
    "version": "1.0.0",
    "description": "Server for Apollo based task runner",
    "main": "index.ts",
    "scripts": {
        "nodemon": "nodemon",
        "dev": "NODE_ENV=development npm-run-all -p nodemon watch",
        "test": "jest",
        "test:watch": "jest --watch",
        "build": "rm -rf dist && webpack --config webpack.$NODE_ENV.js",
        "watch": "webpack --watch --mode development --config webpack.$NODE_ENV.js",
        "start": "node ./dist/server",
        "prod": "NODE_ENV=production yarn build & yarn start"
    },
    "keywords": [],
    "author": "â€œDarek",
    "license": "ISC",
    "dependencies": {
        "apollo-server": "^2.9.7",
        "cookie-parser": "^1.4.4",
        "graphql": "^14.5.8",
        "jsonwebtoken": "^8.5.1",
        "subscriptions-transport-ws": "^0.9.16"
    },
    "devDependencies": {
        "@types/jest": "^24.0.22",
        "@types/jsonwebtoken": "^8.3.5",
        "@types/webpack-env": "^1.14.1",
        "clean-webpack-plugin": "^3.0.0",
        "dotenv": "^8.2.0",
        "jest": "^24.9.0",
        "nodemon": "^1.19.4",
        "npm-run-all": "^4.1.5",
        "ts-jest": "^24.1.0",
        "ts-loader": "^6.2.1",
        "typescript": "^3.7.2",
        "webpack": "^4.41.2",
        "webpack-cli": "^3.3.10",
        "webpack-merge": "^4.2.2",
        "webpack-node-externals": "^1.7.2"
    },
    "nodemonConfig": {
        "ignore": [
            "**/*.test.ts",
            "**/*.spec.ts",
            ".git",
            "node_modules"
        ],
        "watch": [
            "src"
        ],
        "exec": "yarn start",
        "ext": "ts"
    }
}
