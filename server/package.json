{
    "name": "apollo-server-subscription-task-runner",
    "version": "1.0.0",
    "description": "Server for Apollo based task runner",
    "main": "index.ts",
    "scripts": {
        "nodemon": "nodemon",
        "dev": "NODE_ENV=development npm-run-all -p nodemon",
        "test": "jest",
        "test:watch": "jest --watch",
        "build": "rm -rf dist && webpack --config webpack.$NODE_ENV.js",
        "watch": "webpack --watch --mode development --config webpack.$NODE_ENV.js",
        "start": "node ./dist/server",
        "prod": "NODE_ENV=production npm run build & npm run start"
    },
    "keywords": [],
    "author": "â€œDarek",
    "license": "ISC",
    "dependencies": {
        "@graphql-tools/utils": "^8.10.0",
        "apollo-server": "^3.10.1",
        "bcryptjs": "^2.4.3",
        "cookie-parser": "^1.4.6",
        "graphql": "^16.6.0",
        "graphql-subscriptions": "^2.0.0",
        "jsonwebtoken": "^8.5.1"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.2",
        "@types/jest": "^28.1.7",
        "@types/jsonwebtoken": "^8.5.8",
        "@types/webpack-env": "^1.18.0",
        "clean-webpack-plugin": "^4.0.0",
        "dotenv": "^16.0.1",
        "jest": "^28.1.3",
        "nodemon": "^2.0.19",
        "npm-run-all": "^4.1.5",
        "ts-jest": "^28.0.8",
        "ts-loader": "^9.3.1",
        "typescript": "^4.7.4",
        "webpack": "^5.74.0",
        "webpack-cli": "^4.10.0",
        "webpack-merge": "^5.8.0",
        "webpack-node-externals": "^3.0.0"
    },
    "nodemonConfig": {
        "ignore": [
            "**/*.test.ts",
            "**/*.spec.ts",
            ".git",
            "node_modules"
        ],
        "watch": [
            "src"
        ],
        "exec": "npm run start",
        "ext": "ts"
    }
}
